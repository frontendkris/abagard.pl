---
import SectionHeading from "../partials/SectionHeading.astro";

const steps = [
  {
    title: 'Pierwsza rozmowa',
    desc: 'Preferuję kontakt przez WhatsApp i SMS. Powiedz krótko gdzie mieści się przedmiot zlecenia i co chciałbyś osiągnąć.'
  },
  {
    title: 'Spotkanie i wycena',
    desc: 'Prawdopodobnie pomogę Ci sporo zaoszczędzić z uwagi na doświadczenie z materiałami i wyposażeniem!'
  },
  {
    title: 'Realizacja',
    // desc: 'Przechodzę do pracy'
  }
]
---
<section id="wspolpraca" class="mx-auto overflow-hidden">
  <div class="container mx-auto lg:my-24">
    <div class="grid md:grid-cols-12">
      <div class="col-span-12 lg:col-span-5 md:pb-6 py-16">
        <SectionHeading 
          title="Rozpoczęcie zlecenia"
        />
        {
          steps.map((step, index) => {
            return (
              <div class="flex">
                <div class="flex flex-col items-center mr-4">
                  <div>
                    {
                      index < steps.length - 1 &&
                      <div class="flex items-center justify-center w-10 h-10 rounded-full border-stone-700 border-2">
                        <svg viewBox="0 0 24 24" class="w-6 h-6 icon-bold text-stone-700" astro-icon="tabler:arrow-down"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="icon-tabler"><path d="M12 5v14M18 13l-6 6M6 13l6 6"></path></g></svg>
                      </div>
                    }
                    {
                      index === steps.length - 1 &&
                      <div class="flex items-center justify-center w-10 h-10 rounded-full bg-emerald-600 border-2 border-emerald-600">
                        <svg viewBox="0 0 24 24" class="w-6 h-6 text-white icon-bold" astro-icon="tabler:check"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m5 12 5 5L20 7"></path></svg>
                      </div>
                    }
                  </div>
                  {
                    index < steps.length - 1 &&
                    <div class="w-px h-full bg-stone-700"></div>
                  }
                </div>
                <div class="pt-1 pb-8">
                  <p class="mb-2 text-xl font-bold" set:html={step.title}></p>
                  <p set:html={step.desc}></p>
                </div>
              </div>
            )
          })
        }
      </div>
      <div class="col-span-12 lg:col-span-7 relative flex justify-center items-center mask mask-parallelogram-2">
        <img
          src={"/steps.jpg"}
          alt="Dobry płytkarz Poznań"
          class="w-full h-auto lg:w-auto"
        />
      </div>
    </div>
	</div>
</section>