---
import Rating from "../partials/Rating.astro";
import Reviews from "../../libs/reviews.json";
---

<section id="referencje" class="py-16 lg:py-20 bg-white text-black">
  <div class="container mx-auto">
    <h2 class="mb-8 lg:mb-16 text-2xl lg:text-5xl font-bold text-center">
      Opinie klientów
    </h2>
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      {
        Reviews.map((el) => {
          return (
            <div
              class={`bg-gray-100 text-black p-8 shadow-md text-lg flex flex-col justify-between`}
            >
              <p class="" set:html={el.text} />
              <div class="mt-6">
                <Rating value={el.rating} />
                <p class="font-bold" set:html={el.person} />
                <p class="font-normal text-sm text-gray-500">
                  Źródło:{" "}
                  <a
                    href="https://maps.app.goo.gl/tcszzUV3zRTQbDXR7"
                    target="_blank"
                    rel="nofollow noopener noreferrer"
                    class="hover:text-black"
                  >
                    Google Maps
                  </a>
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
