---
type Props = {
  value: number;
}

const { value } : Props = Astro.props;
---
<div class="rating">
  <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked={value === 1} disabled />
  <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked={value === 2} disabled />
  <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked={value === 3} disabled />
  <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked={value === 4} disabled />
  <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked={value === 5} disabled />
</div>